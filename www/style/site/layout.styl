/**
 * Body
 */
body
	background colorBackground


/**
 * Header
 */

headerBackground = #5b5c61

header
	height 120px
	background headerBackground

	.brand
		font-size 40px
		color #fff
		padding-top 38px
		text-decoration none

		small
			font-size: 20px



/**
 * Footer
 */
footer
	margin-top 20px
	background #282828

	h3
		padding-bottom 10px
		padding-top 30px
		color #616161
		font-size 16px
	p
		padding-top 5px
		color #616161
		font-size 14px

	a
		display block
		padding 10px 5px 10px 0
		color #939292
		font-size 20px

		&:hover
			color: #fff

		@media on_small
			font-size 15px
