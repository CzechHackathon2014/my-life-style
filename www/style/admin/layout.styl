/**
 * Body
 */
body
	background colorBackground

/**
 * Header
 */

headerBackground = #606167

.navigation-panel
	height 100%
	width 240px
	background #CACDC4
	position fixed
	top 0
	left 0


.brand-image
	position relative
	height 140px
	background: #767772
	background-image: linear-gradient(-179deg, rgba(255,255,255,0.16) 0%, rgba(0,0,0,0.16) 100%)

.btn-dashboard
	color #ADAFA7
	font-size 30px
	position absolute
	bottom 2px
	right 9px
	&:hover
		color #fff

.settings-navigation-panel
	position absolute
	top 0
	left 240px
	background #393939
	width 240px
	height 100%
	z-index 1

.base-panel
	position relative
	z-index 2
	background #EAEAE7
	margin-left 240px
	// width 100%
	padding-top 20px
	padding-bottom 40px
	transition 200ms
	min-height 100%

	\.system-navigation--active &
		transform translate(240px, 0)

body.system-navigation--active
	overflow hidden


.base-panel.login-panel
	width 100%


nav
	ul
		display block
		margin 0
		padding 0
	li
		display block
		list-style none
		margin 0
		padding 0

.navigation
	li
		position relative
	a
		color #767772
		font-size 20px
		background #ADAFA7
		border-bottom 1px solid #767772
		padding 18px 20px 13px 30px
		display block
		text-decoration none

	.active a
		color #393939
		background #EAEAE7

		i.svg
			opacity 0.8

	img
		max-width 39px
		position relative
		top -2px
		left -14px

	i.svg
		opacity 0.5
		width 20px
		height 20px
		background-size 20px 20px
		position relative
		top 2px
		margin-right 4px

.navigation--user
	a
		font-size 16px
		color #393939
		background transparent
		padding 10px 12px 6px 22px
		border-bottom none

	img
		max-width 30px

.nav-item--user::after
	display block
	content ""
	background  url('img/triangle.svg') no-repeat 0 0
	width 10px
	height 10px
	position absolute
	left 213px
	top 19px
	z-index 2
	transition 400ms
	opacity 0.5

.nav-item--user:hover::after
	opacity 1
	cursor pointer
	pointer-events none

.nav-item--user.open::after
	transform rotate(180deg)

.navigation--system
	height 100%

	ul
		height 100%
		position relative
	a
		color #ADAFA7
		background #444542
		border-bottom 1px solid #393939


.navigation
	.nav-item--logout
		position absolute
		bottom 0
		width 100%

		a
			font-size 15px



.header
	h1
		color #CACDC4
		font-weight normal
		font-size 16px

.secondary.small.button
	font-size 10px
	background #4f4f4f
	color #aaa
	padding 10px
	margin-bottom 2px

	&:hover
		background white
		color red

.footer
	margin-top 30px
	padding 30px
	border-top 2px solid #CACDC4


.navigation--footer
	a
		color #ADAFA7

		&:hover
			color #767772

form
	table
		border none
		tr
			background none !important

#frm-signInForm
	table
		margin 0 auto


ul.error
	background #ffa5a5
	color #920000
	border-radius 6px
	padding 10px
	list-style none

@keyframes fadeOut {
	0% {
		transform scale(1)
		opacity 1
	}
	70% {
		transform scale(1)
		opacity 1
	}
	100% {
		transform scale(2)
		opacity 0
		displaynone
	}
}

.flash
	display block
	width 92%
	padding 30px
	margin 1em 0
	position fixed
	top 0
	left 4%
	z-index 9999
	background #FFF9D7
	border-radius 10px
	color black
	font-size 30px
	font-weight bold
	text-align center
	animation fadeOut 2s
	animation-fill-mode forwards
	pointer-events none

	&.info
		background #bdf59d
		color #2d372a

	&.error
		background #ffa5a5
		color #920000