/**
 * Block Datalist
 */

.b-datalist
	margin 0 20px
	color #678EC1

	.b-datalist__line
		border-bottom 1px solid #CACDC4
		padding 20px 0
		margin-bottom 5px
		cursor pointer
		// opacity 0.8

		&:hover
			color #275EA6
			// opacity 1


.b-datalist--small
	font-size: 10px

	.b-datalist__line
		border-bottom 1px solid #CACDC4
		padding 5px 0
		margin-bottom 2px


.b-datalist--no-active
	color #c0c0c0

	a
		color #c0c0c0
		text-decoration none

		&:hover
			color #275ea6

	.b-datalist__line
		cursor default

		&:hover
			color inherit

	.b-datalist__line p
		margin-bottom 0


.b-datalist__line
	.default-click-action
		display none

.b-datalist__line
	.button
		margin-bottom 0

.b-datalist__remove
	transition 200ms
	opacity 0

.b-datalist__line:hover
	.b-datalist__remove
		opacity .5

		&:hover
			opacity 1