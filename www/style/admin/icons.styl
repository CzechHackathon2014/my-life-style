/**
 * Icons
 */
i.pixel
	display inline-block
	text-indent -100%
	font-size inherit
	overflow hidden

.svg
	display inline-block
	width 32px
	height 32px
	background-repeat no-repeat
	background-size 32px 32px


.svg-small
	display inline-block
	width 16px
	height 16px
	background-size 16px 16px

.svg-base-color
	fill #ADAFA7

.button--icon
	i.svg
		position absolute
		top 9px
		left 10px

.ico-new
	background url('ico/add.svg') no-repeat

.ico-save
	background url('ico/save.svg') no-repeat

.ico-close
	background url('ico/close.svg') no-repeat

.ico-dashboard
	background url('ico/dashboard.svg') no-repeat

.ico-search
	background url('ico/search.svg') no-repeat

.ico-upload
	width 36px
	height 28px
	background-image url('ico/upload.svg')

.ico-trash
	background-image url('ico/trash.svg')

.ico-load-more
	background-image url('ico/load-more.svg')

.ico-clear-search
	width 14px
	height 14px
	background-size 14px 14px
	background-image url('ico/clear-search.svg')